<config>
	<sections>
		<dev>
			<groups>
				<pubsub_logger translate="label">
				<label>PubSub Logger</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
					<fields>
						<enable translate="label">
							<label>Enable Logger</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</enable>
						<passthru translate="label">
							<label>Pass log event to writer</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends><enable>1</enable></depends>
						</passthru>
						<endpoint translate="label">
							<label>Logger Endpoint</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</endpoint>		
					</fields>
				</pubsub_logger>
			</groups>
		</dev>
	</sections>
</config>
